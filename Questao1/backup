version: '3.8'

networks:
  mongo_net:
    driver: bridge

volumes:
  mongo_vol:

services:

  mongodb:
    container_name: mongo
    image: mongo:6.0.3
    restart: always
    ports:
      - 27017:27017
    networks:
      - mongo_net
    volumes:
      - mongo_vol:/data/db
    environment:
      - MONGO_INITDB_ROOT_USERNAME=admin
      - MONGO_INITDB_ROOT_PASSWORD=MongoDB2019!
      
